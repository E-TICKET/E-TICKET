<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

 <!-- data source -->
 <bean id="dataSource"         class="org.springframework.jdbc.datasource.DriverManagerDataSource">
      <property name="driverClassName" value="com.mysql.jdbc.Driver" />
      <property name="url" value="jdbc:mysql://localHost/Etick" />
      <property name="username" value="root" /> 
      <property name="password" value="aroot" />
   </bean>   
          
  <!-- session factory -->
  <bean id="sessionFactory"     class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
         <property name="dataSource"> 
               <ref bean="dataSource"/>
         </property>

         <property name="hibernateProperties">  
               <props> 
                        <prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>          
                        <prop key="hibernate.show_sql">true</prop>  
                         <prop key="hibernate.hbm2ddl.auto">create</prop> 
                </props> 
         </property>
         <property name="mappingResources">
              <list> 
                         <value>/Categorie.hbm.xml</value>
                         <value>/Evenement.hbm.xml</value>
                         <value>/EvenementCategorie.hbm.xml</value>
              </list>       
         </property> 
  </bean>
  
  <bean id="categorieService" class="categorie.ServiceCategorie" >
           <property name="categorieDao" ref="categorieDao" /> 
  </bean>  
  
  <!-- Data Access Object --> 
  <bean id="categorieDao" class="categorie.DAOCategorie" >
           <property name="sessionFactory" ref="sessionFactory"/>    
  </bean>   
  
  <bean id="evenementService" class="evenement.ServiceEvenement" >
           <property name="evenementDao" ref="evenementDao" /> 
  </bean>  
  
  <!-- Data Access Object --> 
  <bean id="evenementDao" class="evenement.DAOEvenement" >
           <property name="sessionFactory" ref="sessionFactory"/>    
  </bean>   
  
  <bean id="evenementcategorieService" class="evenementcategorie.ServiceEvenementCategorie" >
           <property name="evenementcategorieDao" ref="evenementcategorieDao" /> 
  </bean>  
  
  <!-- Data Access Object --> 
  <bean id="evenementcategorieDao" class="evenementcategorie.DAOEvenementCategorie" >
           <property name="sessionFactory" ref="sessionFactory"/>    
  </bean>   


</beans>
